# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

target 'cuHacking' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for cuHacking
  pod 'Firebase/Core'
  pod 'Fabric', '~> 1.10.2'
  pod 'Crashlytics', '~> 3.13.2'
  pod 'Mapbox-iOS-SDK', '~> 5.1'
  pod 'Swinject'
  pod 'SwiftLint'


  target 'cuHackingTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Firebase/Core'
    pod 'Fabric', '~> 1.10.2'
    pod 'Crashlytics', '~> 3.13.2'
    pod 'Mapbox-iOS-SDK', '~> 5.1'
    pod 'Swinject'
    pod 'SwiftLint'

  end

  target 'cuHackingUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Firebase/Core'
    pod 'Fabric', '~> 1.10.2'
    pod 'Crashlytics', '~> 3.13.2'
    pod 'Mapbox-iOS-SDK', '~> 5.1'
    pod 'Swinject'

  end

end
